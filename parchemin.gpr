project Parchemin is
    Data_Path := external ("Data_Path", "./data");

    for Source_Dirs use ("src/**");
    for Object_Dir use "obj";
    for Exec_Dir use "bin";
    for Main use ("parchemin-cli.adb");

    package Compiler is
      -- Drapeaux de sécurité : -gnatwa (warnings), -gnatVa (validations)
      for Default_Switches ("Ada") use (
          "-gnat2012", 
          "-gnata", 
          "-gnateDData_Path=""" & Data_Path & """"
        );
   end Compiler;
end Parchemin;
